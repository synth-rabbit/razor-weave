{
  "name": "@razorweave/events",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "description": "Event sourcing utilities for Razorweave",
  "main": "./src/index.ts",
  "types": "./src/index.ts",
  "exports": {
    ".": {
      "types": "./src/index.ts",
      "default": "./src/index.ts"
    }
