{
  "name": "@razorweave/tooling",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "description": "Linting, validation, and development tooling for Razorweave",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    },
    "./linters/eslint-config": "./dist/linters/eslint-config.js",
    "./linters/prettier-config": "./dist/linters/prettier-config.js",
    "./linters/markdownlint-config": "./dist/linters/markdownlint-config.js",
    "./hooks/git": "./dist/hooks/git/index.js",
    "./hooks/claude": "./dist/hooks/claude/index.js"
  },
  "scripts": {
    "build": "tsc --build",
    "build:watch": "tsc --build --watch",
    "clean": "rm -rf dist tsconfig.tsbuildinfo",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "html:print:build": "tsx cli-commands/run.ts html print build",
    "html:print:list": "tsx cli-commands/run.ts html print list",
    "html:print:diff": "tsx cli-commands/run.ts html print diff",
    "html:print:promote": "tsx cli-commands/run.ts html print promote",
    "pdf:build": "tsx ../pdf-gen/src/cli.ts build",
    "boardroom:vp-product": "tsx cli-commands/boardroom-vp-product.ts",
    "boardroom:vp-engineering": "tsx cli-commands/boardroom-vp-engineering.ts",
    "boardroom:vp-ops": "tsx cli-commands/boardroom-vp-ops.ts",
    "boardroom:approve": "tsx cli-commands/boardroom-approve.ts",
    "boardroom:status": "tsx cli-commands/boardroom-status.ts",
    "boardroom:generate": "tsx cli-commands/boardroom-generate.ts"
  },
  "dependencies": {
    "@razorweave/boardroom": "workspace:*",
    "@razorweave/database": "workspace:*",
    "@razorweave/events": "workspace:*",
    "@razorweave/pdf-gen": "workspace:*",
    "@razorweave/shared": "workspace:*",
    "@typescript-eslint/eslint-plugin": "^6.19.0",
    "@typescript-eslint/parser": "^6.19.0",
    "better-sqlite3": "^12.4.1",
    "cheerio": "^1.1.2",
    "eslint": "^8.56.0",
    "glob": "^10.3.10",
    "husky": "^8.0.3",
    "markdownlint-cli2": "^0.12.1",
    "pdfkit": "^0.17.2",
    "pino": "^10.1.0",
    "pino-pretty": "^13.1.2",
    "prettier": "^3.2.4",
    "rehype-stringify": "^10.0.1",
    "remark-frontmatter": "^5.0.0",
    "remark-gfm": "^4.0.1",
    "remark-parse": "^11.0.0",
    "remark-rehype": "^11.1.2",
    "svg-to-pdfkit": "^0.1.8",
    "unified": "^11.0.5",
    "unist-util-visit": "^5.0.0",
    "yaml": "^2.8.1",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.13",
    "@types/hast": "^3.0.4",
    "@types/mdast": "^4.0.4",
    "@types/node": "^20.19.25",
    "@types/pdfkit": "^0.17.3",
    "typescript": "^5.3.3",
    "vitest": "^1.1.0"
  }
}
