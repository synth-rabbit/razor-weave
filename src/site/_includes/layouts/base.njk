<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>{{ title }}</title>
  <meta name="description" content="{{ description }}">

  <!-- Favicon -->
  <link rel="icon" type="image/svg+xml" href="/favicon.svg">

  <!-- Open Graph / Social Media -->
  <meta property="og:type" content="{{ ogType | default('website') }}">
  <meta property="og:url" content="https://razorweave.com{{ page.url }}">
  <meta property="og:title" content="{{ ogTitle | default(title) }}">
  <meta property="og:description" content="{{ ogDescription | default(description) }}">
  <meta property="og:image" content="https://razorweave.com{{ ogImage | default('/images/hero/preview-scene.jpg') }}">

  <!-- Twitter Card -->
  <meta name="twitter:card" content="{{ twitterCard | default('summary_large_image') }}">
  <meta name="twitter:url" content="https://razorweave.com{{ page.url }}">
  <meta name="twitter:title" content="{{ twitterTitle | default(title) }}">
  <meta name="twitter:description" content="{{ twitterDescription | default(description) }}">
  <meta name="twitter:image" content="https://razorweave.com{{ twitterImage | default('/images/hero/preview-scene.jpg') }}">

  <!-- Fonts -->
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Space+Grotesk:wght@500;600;700&family=Inter:wght@400;500;600&display=swap" rel="stylesheet">

  <!-- Base Styles -->
  <link rel="stylesheet" href="/styles/theme.css">
  <link rel="stylesheet" href="/styles/components.css">
  <link rel="stylesheet" href="/styles/textures.css">
  <link rel="stylesheet" href="/styles/animations.css">

  {# Additional stylesheets for specific pages #}
  {% if extraStyles %}
    {% for style in extraStyles %}
  <link rel="stylesheet" href="{{ style }}">
    {% endfor %}
  {% endif %}
  {# Inline styles for page-specific CSS #}
  {% if inlineStyles %}
  <style>
{{ inlineStyles | safe }}
  </style>
  {% endif %}
</head>
<body{% if bodyClass %} class="{{ bodyClass }}"{% endif %}>
  {% include "partials/header.njk" %}

  {{ content | safe }}

  {% include "partials/footer.njk" %}

  <!-- Scripts -->
  <script src="/scripts/nav-toggle.js"></script>
  {# Additional scripts for specific pages #}
  {% if extraScripts %}
    {% for script in extraScripts %}
  <script src="{{ script }}"></script>
    {% endfor %}
  {% endif %}
</body>
</html>
