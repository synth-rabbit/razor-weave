{
  "name": "razorweave",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "description": "Razorweave TTRPG content creation and publishing system",
  "scripts": {
    "build": "pnpm -r build",
    "build:watch": "pnpm -r --parallel build:watch",
    "clean": "pnpm -r clean",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:coverage:watch": "vitest watch --coverage",
    "test:coverage:ui": "vitest --ui --coverage",
    "typecheck": "pnpm -r typecheck",
    "setup": "pnpm --filter @razorweave/tooling exec tsx scripts/setup-hooks.ts",
    "lint": "pnpm lint:ts && pnpm lint:md",
    "lint:ts": "eslint 'src/**/*.ts'",
    "lint:md": "markdownlint-cli2 '**/*.md' '#node_modules' '#dist'",
    "lint:fix": "eslint 'src/**/*.ts' --fix && prettier 'src/**/*.ts' --write",
    "validate": "pnpm --filter @razorweave/tooling exec tsx scripts/run-validators.ts",
    "review:book": "tsx src/tooling/cli-commands/run.ts review book",
    "review:chapter": "tsx src/tooling/cli-commands/run.ts review chapter",
    "review:status": "tsx src/tooling/cli-commands/run.ts review status",
    "review:list": "tsx src/tooling/cli-commands/run.ts review list",
    "review:view": "tsx src/tooling/cli-commands/run.ts review view",
    "review:analyze": "tsx src/tooling/cli-commands/run.ts review analyze",
    "review:add-reviewers": "tsx src/tooling/cli-commands/run.ts review add-reviewers",
    "review:reanalyze": "tsx src/tooling/cli-commands/run.ts review reanalyze",
    "review:collect": "tsx src/tooling/cli-commands/run.ts review collect",
    "personas:hydrate": "tsx src/tooling/cli-commands/run.ts hydrate-core",
    "personas:generate": "tsx src/tooling/cli-commands/run.ts generate",
    "personas:stats": "tsx src/tooling/cli-commands/run.ts stats",
    "html:print:build": "tsx src/tooling/cli-commands/run.ts html print build",
    "html:print:list": "tsx src/tooling/cli-commands/run.ts html print list",
    "html:print:diff": "tsx src/tooling/cli-commands/run.ts html print diff",
    "html:print:promote": "tsx src/tooling/cli-commands/run.ts html print promote",
    "html:web:build": "tsx src/tooling/cli-commands/run.ts html web build",
    "html:web:list": "tsx src/tooling/cli-commands/run.ts html web list",
    "html:web:diff": "tsx src/tooling/cli-commands/run.ts html web diff",
    "html:web:promote": "tsx src/tooling/cli-commands/run.ts html web promote",
    "pdf:build": "pnpm --filter @razorweave/tooling pdf:build",
    "site:dev": "pnpm --filter razorweave-site dev",
    "site:build": "pnpm --filter razorweave-site build",
    "site:test": "pnpm --filter razorweave-site test",
    "site:test:visual": "pnpm --filter razorweave-site test:visual",
    "site:deploy": "pnpm --filter razorweave-site deploy",
    "db:materialize": "tsx src/tooling/cli-commands/db-materialize.ts",
    "db:migrate": "tsx src/tooling/database/migrate.ts",
    "db:migrate:dry-run": "tsx src/tooling/database/migrate.ts data/project.db --dry-run",
    "db:seed": "tsx src/tooling/books/seed.ts",
    "db:verify": "tsx src/tooling/database/verify.ts",
    "plans:archive": "tsx src/tooling/cli-commands/plans-archive.ts",
    "plans:index": "tsx src/tooling/cli-commands/plans-index.ts",
    "book:register": "tsx src/tooling/cli-commands/book-register.ts",
    "book:list": "tsx src/tooling/cli-commands/book-list.ts",
    "book:info": "tsx src/tooling/cli-commands/book-info.ts",
    "build:book": "tsx src/tooling/cli-commands/build-book.ts",
    "workflow:start": "tsx src/tooling/cli-commands/workflow-start.ts",
    "workflow:status": "tsx src/tooling/cli-commands/workflow-status.ts",
    "workflow:list": "tsx src/tooling/cli-commands/workflow-list.ts",
    "workflow:pause": "tsx src/tooling/cli-commands/workflow-pause.ts",
    "workflow:resume": "tsx src/tooling/cli-commands/workflow-resume.ts",
    "workflow:cancel": "tsx src/tooling/cli-commands/workflow-cancel.ts",
    "w1:verify-foundation": "tsx src/tooling/cli-commands/w1-verify-foundation.ts",
    "w1:planning": "tsx src/tooling/cli-commands/w1-planning.ts",
    "w1:content-modify": "tsx src/tooling/cli-commands/w1-content-modify.ts",
    "w1:validate-chapters": "tsx src/tooling/cli-commands/w1-validate-chapters.ts",
    "w1:validate": "tsx src/tooling/cli-commands/w1-validate.ts",
    "w1:finalize-web-html": "tsx src/tooling/cli-commands/w1-finalize-web-html.ts",
    "w1:human-gate": "tsx src/tooling/cli-commands/w1-human-gate.ts",
    "w1:finalize": "tsx src/tooling/cli-commands/w1-finalize.ts",
    "w1:strategic": "tsx src/tooling/cli-commands/w1-strategic.ts",
    "wf": "tsx src/tooling/cli-commands/workflow.ts",
    "wf:start": "tsx src/tooling/cli-commands/workflow.ts start",
    "wf:resume": "tsx src/tooling/cli-commands/workflow.ts resume",
    "wf:result": "tsx src/tooling/cli-commands/workflow.ts result",
    "wf:status": "tsx src/tooling/cli-commands/workflow.ts status",
    "wf:list": "tsx src/tooling/cli-commands/workflow.ts list",
    "wf:gate": "tsx src/tooling/cli-commands/workflow.ts gate",
    "wf:prompt": "tsx src/tooling/cli-commands/workflow-prompt.ts"
  },
  "devDependencies": {
    "@anthropic-ai/sdk": "^0.20.0",
    "@razorweave/tooling": "workspace:*",
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^6.19.0",
    "@typescript-eslint/parser": "^6.19.0",
    "@vitest/coverage-v8": "^1.6.1",
    "eslint": "^8.56.0",
    "markdownlint-cli2": "^0.12.1",
    "prettier": "^3.2.4",
    "tsx": "^4.20.6",
    "typescript": "^5.3.3",
    "vitest": "^1.1.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@8.14.2+sha1.1670a65b60df5f95e9f0cb7de46e605d9bd74fda",
  "dependencies": {
    "zod": "^3.22.4"
  }
}
