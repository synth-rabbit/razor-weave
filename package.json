{
  "name": "razorweave",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "description": "Razorweave TTRPG content creation and publishing system",
  "scripts": {
    "build": "pnpm -r build",
    "build:watch": "pnpm -r --parallel build:watch",
    "clean": "pnpm -r clean",
    "test": "vitest",
    "typecheck": "pnpm -r typecheck",
    "setup": "pnpm --filter @razorweave/tooling exec tsx scripts/setup-hooks.ts"
  },
  "devDependencies": {
    "@razorweave/tooling": "workspace:*",
    "@types/node": "^20.10.0",
    "tsx": "^4.20.6",
    "typescript": "^5.3.3",
    "vitest": "^1.1.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  }
}
